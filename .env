# Database Configuration
# Replace with your ACTUAL MySQL credentials below:
DATABASE_URL=mysql+pymysql://root:@localhost/ecommerce_db

# Security Keys (MUST change these in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production-xyz123
RESET_SECRET_KEY=your-reset-secret-key-change-this-in-production-abc456

# Email Configuration (for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Application Settings
DEBUG=False
ENVIRONMENT=production


